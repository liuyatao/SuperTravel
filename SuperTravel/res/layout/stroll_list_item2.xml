<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.mytravel.supertravel.myview.UrlImageView
            android:id="@+id/imageView1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/avatar" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/qq_q_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:text="这是昵称"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/topic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/time"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="  06-01 12:30"
                android:textColor="@color/hintColor"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="3dip" >

        <TextView
            android:id="@+id/descri_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="3dip"
            android:text="没想到这就是图片下的汉字哈哈哈哈哈哈哈哈哈哈哈哈哈哈没想到这就是图片下的汉字哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈没想到这就是图片下的汉字哈哈哈哈哈哈哈哈哈哈哈哈哈哈没想到这就是图片下的汉字哈哈哈哈哈哈哈哈哈哈哈哈哈哈" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:orientation="horizontal"
        android:paddingBottom="8dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="8dip" >

        <TextView
            android:id="@+id/addresst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/location"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:text="  中国地质大学（武汉）"
            android:textColor="@color/hintColor"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/topic_review"
            android:layout_width="30dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dip"
            android:src="@drawable/expert_btn_commends_normal" />

        <ImageView
            android:id="@+id/topic_favour"
            android:layout_width="30dip"
            android:layout_height="20dip"
            android:layout_toLeftOf="@id/topic_review"
            android:src="@drawable/expert_btn_like_normal" />
    </RelativeLayout>

</RelativeLayout>